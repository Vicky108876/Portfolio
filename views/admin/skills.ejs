<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Manage Skills</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        background: linear-gradient(to right, #232526, #414345);
        min-height: 100vh;
        color: #fff;
        display: flex;
        justify-content: center;
        align-items: center;
        font-family: "Segoe UI", sans-serif;
        padding: 20px;
      }
      ::placeholder {
        color: #ccc !important; /* or #fff for bright white */
        opacity: 1; /* fully visible */
      }
      .skills-card {
        background-color: #1f1f1f;
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.4);
        width: 100%;
        max-width: 600px;
        animation: fadeInUp 0.6s ease-in-out;
      }

      @keyframes fadeInUp {
        from {
          opacity: 0;
          transform: translateY(30px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .form-control,
      .form-control:focus {
        background-color: #333;
        border-color: #555;
        color: #fff;
      }

      .list-group-item {
        background-color: #2c2c2c;
        color: #fff;
        border-color: #444;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      h2 {
        text-align: center;
        color: #0dcaf0;
        margin-bottom: 25px;
      }

      .btn-danger {
        padding: 2px 10px;
      }
    </style>
  </head>

  <body>
    <a href="/admin/dashboard" class="position-fixed top-0 start-0 m-3">
      <img src="/img/arrow-left.png" alt="Back" style="width: 50px" />
    </a>

    <div class="skills-card">
      <h2><i class="bi bi-lightning"></i> Manage Skills</h2>

      <!-- Add Skill Form -->
      <form method="POST" action="/admin/skills" class="mb-4">
        <div class="input-group">
          <input
            class="form-control"
            name="name"
            placeholder="Enter skill name"
            required
          />
          <button class="btn btn-success" type="submit">
            <i class="bi bi-plus-circle"></i> Add
          </button>
        </div>
      </form>

      <!-- Skill List -->
      <ul class="list-group">
        <% skills.forEach(skill => { %>
        <li class="list-group-item">
          <span><%= skill.name %></span>
          <form
            method="POST"
            action="/admin/skills/delete/<%= skill._id %>"
            style="display: inline"
          >
            <button class="btn btn-danger btn-sm" title="Delete">
              <i class="bi bi-trash"></i>
            </button>
          </form>
        </li>
        <% }) %>
      </ul>
    </div>

    <!-- Bootstrap Icons -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
      rel="stylesheet"
    />
  </body>
</html>
