<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Manage Achievements</title>
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Bootstrap Icons (optional, for the button icon) -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/Admin_achievements.css" />
  </head>
  <body>
    <a href="/admin/dashboard" class="position-fixed top-0 start-0 m-3">
      <img src="/img/arrow-left.png" alt="Back" style="width: 50px" />
    </a>
    <div class="container py-5">
      <div class="row justify-content-center">
        <div class="col-12 col-sm-10 col-md-8 col-lg-6">
          <form method="POST" action="/admin/achievement" class="mb-4">
            <div class="about-card">
              <h2><i class="bi bi-kanban"></i> Manage Project Achievements</h2>
              <div class="mb-3">
                <input
                  type="number"
                  name="certificates"
                  class="form-control"
                  placeholder="Certificates Count"
                  required
                />
              </div>
              <div class="mb-3">
                <input
                  type="number"
                  name="internships"
                  class="form-control"
                  placeholder="Internships Count"
                  required
                />
              </div>
              <button type="submit" class="btn btn-success w-100">
                <i class="bi bi-plus-circle"></i> Manage Achievements
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- Bootstrap JS (optional for interactivity) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
