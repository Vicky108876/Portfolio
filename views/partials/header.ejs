<!DOCTYPE html>
<html lang="en" data-theme="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Vicky M Portfolio</title>

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Bootstrap Icons -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
      rel="stylesheet"
    />
    <!-- Google Font -->
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@500;600&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/header.css" />
    <link rel="stylesheet" href="/css/index.css" />
  </head>
  <body>
    <!-- Scroll Progress Bar -->
    <div id="progressBar"></div>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg sticky-top">
      <div class="container">
        <a class="navbar-brand" href="#home">
          <svg
            width="180"
            height="60"
            viewBox="0 0 600 150"
            class="animated-logo"
          >
            <defs>
              <linearGradient id="grad1" x1="0%" y1="0%" x2="100%" y2="100%">
                <stop
                  offset="0%"
                  style="stop-color: #00ffe5; stop-opacity: 1"
                />
                <stop
                  offset="100%"
                  style="stop-color: #ff00c8; stop-opacity: 1"
                />
              </linearGradient>
            </defs>
            <text
              x="50%"
              y="50%"
              dominant-baseline="middle"
              text-anchor="middle"
              class="logo-text"
            >
              Vicky_
              <tspan class="highlight">M</tspan>
            </text>
          </svg>
        </a>
        <button
          class="navbar-toggler bg-light"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>

        <div
          class="collapse navbar-collapse justify-content-end"
          id="navbarNav"
        >
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="#home"
                ><i class="bi bi-house-door-fill"></i> Home</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#about"
                ><i class="bi bi-person-circle"></i> About</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#projectspage"
                ><i class="bi bi-kanban-fill"></i> Projects</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#contact"
                ><i class="bi bi-envelope-fill"></i> Contact</a
              >
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Bootstrap JS (needed for toggler to work!) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Collapse toggler on nav click -->
    <script>
      const navLinks = document.querySelectorAll(".nav-link");
      const navCollapse = document.getElementById("navbarNav");
      navLinks.forEach((link) => {
        link.addEventListener("click", () => {
          const navbarToggler = document.querySelector(".navbar-toggler");
          if (window.innerWidth < 992 && navbarToggler.offsetParent !== null) {
            new bootstrap.Collapse(navCollapse).hide();
          }
        });
      });
    </script>

    <!-- Scroll Progress -->
    <script>
      const progressBar = document.getElementById("progressBar");
      window.addEventListener("scroll", () => {
        const scrollTop = window.scrollY;
        const docHeight =
          document.documentElement.scrollHeight - window.innerHeight;
        const scrollPercent = (scrollTop / docHeight) * 100;
        progressBar.style.width = scrollPercent + "%";
      });
    </script>
  </body>
</html>
